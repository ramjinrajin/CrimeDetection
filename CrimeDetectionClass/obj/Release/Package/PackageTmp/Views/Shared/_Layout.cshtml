<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crime Detection</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#" class="navbar-brand">Crime Detection</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/Home/Index">Home</a></li>
                   
                 
                    @if (ViewBag.Title == "Login")
                    {
                        <li><a href="/Register/Index">Register</a></li>
                    }
                    @if (HttpContext.Current.User.Identity.Name != "" && ViewBag.Title != "Login")
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown">Hi @HttpContext.Current.User.Identity.Name<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                @if (HttpContext.Current.User.Identity.Name.Contains("indianpolice.com"))
                                {
                                     <li><a href="/Dashboard/Index">Dashboard</a></li>
                                    <li><a href="/CaseFiles/Index">Case Files</a></li>
                                }
                                else
                                {
                                    <li><a href="/MyReports/Index">My Reports</a></li>
                                }
                                <li><a href="/Women/Index">Womens Portal</a></li>


                                <li><a href="/Login/Logout">Signout</a></li>
                            </ul>
                        </li>
                    }



                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <br /><br /><br />
        @RenderBody()


    </div>

    <div>
        <footer style="text-align:center">
            <p>&copy; @DateTime.Now.Year - Crime Detection</p>
        </footer>
    </div>


</body>
</html>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/dist/js/sweetalert.min.js"></script>
<script>
    $(document).ready(function () 
    {
        
        var Alert = '@ViewBag.Status';

        if (Alert == 'success') {


            swal({
                title: "Congratulations!",
                text: '@ViewBag.Message',
                icon: "success",
                button: "ok",
            });
        }
        if (Alert == 'error') {
            swal({
                title: "Error occured!",
                text: "Some thing went wrong",
                icon: "error",
                button: "ok",
            });
        }
        if (Alert == 'unauthorized') {
            swal({
                title: "Error occured!",
                text: "Invalid credentials",
                icon: "error",
                button: "ok",
            });
        }




    });
</script>