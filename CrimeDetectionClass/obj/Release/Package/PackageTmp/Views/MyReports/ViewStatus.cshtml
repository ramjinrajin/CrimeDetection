
@{
    ViewBag.Title = "ViewStatus";
}


<legend style="text-align:center">View Status</legend>

<div class="col-md-12">
    <div class="row clearfix">
        <div class="col-md-8 column col-md-offset-2">
     

                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            This module is accessible only by registered user
                            <small class="pull-right">Time: @DateTime.Now.TimeOfDay</small>
                        </h3>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-md-12 column">
                        <div class="list-group">

                            <div class="list-group-item">
                                <h4 class="list-group-item-heading">
                                    Case No :@Model.CrimeId
                                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="Access website and use site API">
                                        <i class="fa fa-question-circle"></i>
                                    </a>
                                </h4>
                                <p class="list-group-item-text">
                                    <span class="label @Model.StatusCode">@Model.Status</span>
                                </p>
                            </div>

                            <div class="list-group-item">
                                <h4 class="list-group-item-heading">
                                    Description
                                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="Access site using SSH terminal">
                                        <i class="fa fa-question-circle"></i>
                                    </a>
                                </h4>
                                <p class="list-group-item-text">

                                    @Model.Description
                                </p>
                            </div>


